#!/bin/bash

## cleanup

rm html/*
rm latex/*
rm pdf/*

for i in `ls markdown/*.md`
do
	filename=$(basename $i)
	filename="${filename%.*}"
	echo $filename
	kramdown -o html $i > html/$filename.html
	kramdown -o latex --template 'dynalp.erb' $i > latex/$filename.tex
	pdflatex -output-directory=pdf latex/$filename.tex > /dev/null 2>&1
done

find pdf/ -type f ! -iname '*.pdf' -delete

echo "success"
